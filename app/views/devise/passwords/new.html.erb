<div class="ls-login-parent">
  <div class="ls-login-inner">
    <div class="ls-login-container">
      <div class="ls-login-box">
        <h1 class="ls-login-logo">
          <img title="Logo Login" src="https://opensource.locaweb.com.br/locawebstyle/assets/images/locastyle/logo-locaweb.png">
        </h1>        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "ls-form ls-login-form") do |f| %>
          <fieldset>
          <%= render "devise/shared/error_messages", resource: resource %>

          <label class="ls-label">
            <b class="ls-label-text ls-hidden-accessible">E-mail</b>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"ls-field-lg", placeholder: "Email para recuperar a senha" %>
          </label>

          <%= f.submit "Recuperar Senha", class: "ls-btn-primary ls-btn-block ls-btn-lg" %>
          </fieldset>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
