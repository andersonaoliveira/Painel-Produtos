<div class="ls-topbar ">
  <!-- Barra de Notificações -->
  <div class="ls-notification-topbar">
    <!-- Dropdown com detalhes da conta de usuário -->
    <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
      <a href="#" class="ls-ico-user">
        <span class="ls-name">
          <% if user_signed_in? %>
            Olá, <%= current_user.email %>
          <% else  %>
            Menu
          <% end%>
        </span>
        <% if user_signed_in? && current_user.administrator %>
          (Administrador)
        <% end %>
      </a>
      <nav class="ls-dropdown-nav ls-user-menu">
        <ul>
          <% if user_signed_in? %>
            <% if current_user.administrator %>
              <li><%= link_to "Cadastrar usuário", create_user_path %></li>
              <li><%= link_to "Usuários", users_path %></li>
            <% end %>
            <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
  <span class="ls-show-sidebar ls-ico-menu"></span>
  <a href="<%= unauthenticated_root_path %>"  class="ls-go-next"><span class="ls-text">Início</span></a>
  <!-- Nome do produto/marca com sidebar -->
  <h1 class="ls-brand-name">
    <a href="/" class="ls-ico-earth">
      <small>Gerenciador de</small>
      Produtos
    </a>
  </h1>
  <!-- Nome do produto/marca sem sidebar quando for o pre-painel  -->
</div>
