<%= render 'layouts/errors', object: @server %>
<% if @server.present? %>
  <%= render 'layouts/errors', object: @new_server %>
<% end %>
<div class="container-fluid pb-20">
  <h1 class="ls-md-margin-top my-20">
    Servidor: <%= @server.code %>
  </h1>
  <div class="row">
    <div class="col-md-12">
      <table class="ls-table">
        <thead>
          <tr>
            <th class="text-center" scope="col" colspan="2">
              <h2>Detalhes</h2>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row" >Capacidade</th>
            <td>
              <%= @server.capacity %>
            </td>
          </tr>
          <tr>
            <th scope="row">Produtos Instalados</th>
            <td>
              <%= @server.total_installations %>
            </td>
          </tr>
           <tr>
            <th scope="row">Plano</th>
            <td>
              <%= @server.plan.name %>
            </td>
          </tr>                   
        </tbody>
      </table>
    </div>
  </div>